@model IEnumerable<hrms.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Request Management";
    Layout = "~/Views/Shared/_HrLayout.cshtml";
}

<div class="container-fluid">
    <h2>Leave Request Management</h2>

    <div class="table-container mt-4">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Employee</th>
                    <th>Department</th>
                    <th>Dates</th>
                    <!-- NEW COLUMN HEADER -->
                    <th>Duration</th>
                    <th>Type</th>
                    <th>Current Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.Employee.FullName</td>
                        <td>@(request.Employee.Department?.Name ?? "N/A")</td>
                        <td>@request.StartDate.ToString("d") - @request.EndDate.ToString("d")</td>
                        <!-- NEW COLUMN CELL -->
                        <td>@request.DurationType</td>
                        <td>@request.LeaveType</td>
                        <td>
                            <span class="badge
                                    @(request.Status == "Pending HR Approval" ? "bg-primary" : "bg-warning text-dark")">
                                @request.Status
                            </span>
                        </td>
                        <td>
                            @if (request.Status == "Pending HR Approval" || request.Status == "Pending Manager Approval")
                            {
                                <!-- Action buttons are unchanged -->
                                <div class="d-flex">
                                    <form asp-action="ApproveLeave" asp-route-id="@request.Id" method="post" class="me-2">
                                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                    </form>
                                    <form asp-action="RejectLeave" asp-route-id="@request.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                    </form>
                                </div>
                            }
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr><td colspan="7" class="text-center">No active leave requests require your attention.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>