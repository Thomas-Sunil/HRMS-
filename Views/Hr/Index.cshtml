@model IEnumerable<hrms.Models.Employee>

@{
    ViewData["Title"] = "HR Dashboard";
    Layout = "~/Views/Shared/_HrLayout.cshtml";
}

<div class="container-fluid">
    <!-- ... (Dashboard Stats Cards are the same) ... -->

    <div class="row mt-4">
        <div class="col-12">
            <div class="table-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Employee Overview</h4>
                    <a asp-controller="Hr" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Employee</a>
                </div>
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Department</th>
                            <th>Project Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.FirstName @employee.LastName</td>
                                <td>@employee.Department?.Name ?? "N/A"</td>
                                <td>@employee.Position</td>
                                <td>
                                    @if (employee.Projects.Any())
                                    {
                                        <span class="badge bg-success">Assigned</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">Available</span>
                                    }
                                </td>
                                <td>
                                    <!-- THE NEW "VIEW ATTENDANCE" BUTTON -->
                                    <button type="button" class="btn btn-sm btn-outline-info"
                                            data-bs-toggle="modal"
                                            data-bs-target="#attendanceModal"
                                            data-employee-id="@employee.Id"
                                            data-employee-name="@employee.FullName">
                                        <i class="fas fa-calendar-alt"></i>
                                    </button>

                                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-outline-secondary" title="Edit Employee"><i class="fas fa-edit"></i></a>

                                    @if (employee.DepartmentId != null)
                                    {
                                        <form asp-action="UnassignFromDepartment" method="post" class="d-inline">
                                            <input type="hidden" name="employeeId" value="@employee.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-warning" title="Unassign from Department">
                                                <i class="fas fa-unlink"></i>
                                            </button>
                                        </form>
                                    }
                                    <a href="#" class="btn btn-sm btn-outline-danger" title="Delete Employee"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- BOOTSTRAP MODAL FOR THE CALENDAR -->
<div class="modal fade" id="attendanceModal" tabindex="-1" aria-labelledby="attendanceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="attendanceModalLabel">Attendance Calendar for...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="modal-calendar"></div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('modal-calendar');
            var modalTitleEl = document.getElementById('attendanceModalLabel');
            var calendar;

            var attendanceModal = document.getElementById('attendanceModal');

            // This event fires AFTER the modal is fully visible
            attendanceModal.addEventListener('shown.bs.modal', function (event) {
                var button = event.relatedTarget;
                var employeeId = button.getAttribute('data-employee-id');
                var employeeName = button.getAttribute('data-employee-name');

                modalTitleEl.textContent = 'Attendance Calendar for ' + employeeName;

                if(calendar) {
                    calendar.destroy();
                }

                calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth'
                    },
                    // Use the NEW HrController action URL
                    events: `/Hr/GetEmployeeAttendanceData?employeeId=${employeeId}`
                });

                calendar.render();
            });
        });
    </script>
}