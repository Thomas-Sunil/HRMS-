@{
    ViewData["Title"] = "My Attendance";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>My Attendance Calendar</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <!-- This is where the calendar will be rendered -->
    <div id="attendance-calendar"></div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('attendance-calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek'
                },
                // Fetch attendance data from our new controller action
                events: '/Employee/GetMyAttendanceData',

                // This function styles Saturdays and Sundays
                dayCellDidMount: function(arg) {
                    if (arg.date.getDay() === 0 || arg.date.getDay() === 6) { // 0 = Sunday, 6 = Saturday
                        arg.el.style.backgroundColor = '#f1f1f1'; // Light grey for weekends
                    }
                }
            });

            calendar.render();
        });
    </script>
}