@model hrms.Models.Employee

@{
    ViewData["Title"] = "My Dashboard";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";

    // --- Declare all variables at the top for a clean scope ---
    var projects = ViewBag.Projects as List<hrms.Models.Project>;
    var leaveRequests = ViewBag.MyLeaveRequests as List<hrms.Models.LeaveRequest>;
    var pendingInvitations = ViewBag.PendingInvitations as List<hrms.Models.MeetingInvitation>;
    var acceptedMeetings = ViewBag.AcceptedMeetings as List<hrms.Models.MeetingInvitation>;
}

<div class="container">

    <!-- Display Success Message (e.g., after submitting leave) -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Welcome Header -->
    @if (Model != null)
    {
        <div class="text-center mb-4">
            <h1 class="display-4">Welcome, @Model.FullName</h1>
            <p class="lead">This is your personal dashboard.</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">Could not load employee details.</div>
    }

    <hr class="my-4" />

    <!-- Start of the Two-Column Layout -->
    <div class="row g-4">

        <!-- ===== LEFT COLUMN ===== -->
        <div class="col-lg-6">
            <!-- Card 1: Meeting Invitations -->
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <h4><i class="fas fa-envelope-open-text me-2"></i>Meeting Invitations</h4>
                </div>
                <div class="card-body">
                    @if (pendingInvitations != null && pendingInvitations.Any())
                    {
                        @foreach (var invite in pendingInvitations)
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <h6 class="mb-1">@invite.Meeting.Title</h6>
                                <p class="mb-1 text-muted small">@invite.Meeting.StartTime.ToString("f")</p>
                                <form asp-controller="Employee" asp-action="RespondToInvitation" method="post" class="d-inline">
                                    <input type="hidden" name="invitationId" value="@invite.Id" />
                                    <button type="submit" name="status" value="Accepted" class="btn btn-sm btn-outline-success">Accept</button>
                                    <button type="submit" name="status" value="Declined" class="btn btn-sm btn-outline-danger">Decline</button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted mt-3">You have no pending meeting invitations.</p>
                    }
                </div>
            </div>
        </div>

        <!-- ===== RIGHT COLUMN ===== -->
        <div class="col-lg-6">
            <!-- Card 2: My Upcoming Meetings -->
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <h4><i class="fas fa-calendar-check me-2"></i>My Upcoming Meetings</h4>
                </div>
                <ul class="list-group list-group-flush">
                    @if (acceptedMeetings != null && acceptedMeetings.Any())
                    {
                        @foreach (var invite in acceptedMeetings)
                        {
                            <li class="list-group-item">
                                <h6>@invite.Meeting.Title</h6>
                                <small class="text-muted">@invite.Meeting.StartTime.ToString("f")</small>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center text-muted">You have no upcoming meetings.</li>
                    }
                </ul>
            </div>
        </div>
    </div> <!-- End of the first row -->


    <div class="row g-4 mt-1">
        <!-- ===== LEFT COLUMN (Row 2) ===== -->
        <div class="card h-100 shadow-sm">
                 <div class="card-header"><h4><i class="fas fa-clipboard-list me-2"></i>My Active Projects</h4></div>
                 <ul class="list-group list-group-flush">
                     @{ var activeProjects = ViewBag.ActiveProjects as List<hrms.Models.Project>; }
                     @if (activeProjects != null && activeProjects.Any())
                     {
                         @foreach (var project in activeProjects)
                         {
                             <li class="list-group-item">
                                 <a asp-action="ProjectDetails" asp-route-id="@project.Id"><strong>@project.Name</strong></a>
                                 <span class="badge bg-primary float-end">@project.Status</span>
                             </li>
                         }
                     }
                     else { <li class="list-group-item text-center text-muted">No active projects.</li> }
                 </ul>
             </div>
        </div>
         <!-- ===== RIGHT COLUMN (Row 2) ===== -->
        <div class="col-lg-6">
             <!-- Completed Projects History Card -->
             <div class="card h-100 shadow-sm">
                <div class="card-header"><h4><i class="fas fa-history me-2"></i>Completed Project History</h4></div>
                <ul class="list-group list-group-flush">
                     @{ var completedProjects = ViewBag.CompletedProjects as List<hrms.Models.PerformanceReview>; }
                     @if (completedProjects != null && completedProjects.Any())
                     {
                         @foreach (var review in completedProjects)
                         {
                            <li class="list-group-item">
                                <strong>@review.Project.Name</strong>
                                <span class="badge bg-success float-end">Completed</span>
                                <p class="mb-0 mt-2"><strong>Manager Feedback:</strong> <em>"@review.Feedback"</em></p>
                                <p class="mb-0"><strong>Rating:</strong> @review.Rating / 5</p>
                            </li>
                         }
                     }
                     else { <li class="list-group-item text-center text-muted">No completed projects on record.</li> }
                 </ul>
            </div>
        </div>
        <!-- ===== RIGHT COLUMN (Row 2) ===== -->
        <div class="col-lg-6">
            <!-- Card 4: Recent Leave Requests -->
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <h4><i class="fas fa-plane me-2"></i>My Recent Leave Requests</h4>
                </div>
                <div class="card-body">
                    @if (leaveRequests != null && leaveRequests.Any())
                    {
                        <table class="table table-sm">
                            <tbody>
                                @foreach (var request in leaveRequests)
                                {
                                    <tr>
                                        <td>@request.LeaveType</td>
                                        <td>@request.StartDate.ToString("d") - @request.EndDate.ToString("d")</td>
                                        <td>
                                            <span class="badge
                                                        @(request.Status.Contains("Approved") ? "bg-success" : "")
                                                        @(request.Status.Contains("Rejected") ? "bg-danger" : "")
                                                        @(request.Status.Contains("Pending") ? "bg-warning text-dark" : "")">
                                                @request.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center text-muted mt-3">You have no recent leave requests.</p>
                    }
                </div>
            </div>
        </div>
    </div> <!-- End of the second row -->
</div>