<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-g" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <!-- We will reuse the same professional stylesheet for consistency -->
    <link rel="stylesheet" href="~/css/hr-style.css" />
    <!-- Link to FullCalendar for the attendance page -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css' rel='stylesheet' />
</head>
<body>

    <!-- Start Sidebar Navigation -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-user"></i> Employee Portal</h3>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Employee" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Employee" asp-action="MyAttendance"><i class="fas fa-calendar-alt"></i> My Attendance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Leave" asp-action="Apply"><i class="fas fa-plane-departure"></i> Apply for Leave</a>
            </li>
            <!-- You could add a "My Profile" link here in the future -->
            <li class="nav-item mt-auto">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="nav-link text-start w-100 btn btn-link">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
    <!-- End Sidebar -->
    <!-- Start Main Content Area -->
    <div class="main-content">
        <header class="top-header">
            <div class="d-flex justify-content-between align-items-center w-100">

                <!-- The intelligent Attendance View Component -->
                @await Component.InvokeAsync("Attendance")

                <div class="user-profile">
                    <i class="fas fa-user-circle"></i>
                    <span>@User.Identity.Name</span>
                </div>
            </div>
        </header>

        <main role="main" class="container-fluid p-4">
            @RenderBody()
        </main>
    </div>
    <!-- End Main Content Area -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js'></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>