@model hrms.Models.DepartmentViewModel

@{
    ViewData["Title"] = "Create Department";
    Layout = "~/Views/Shared/_HrLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">Create New Department</h2>

    <div class="table-container">
        <form asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="HeadOfDepartmentId" class="control-label"></label>
                <!-- ---- THIS IS THE FIX ---- -->
                <!-- We cast the ViewBag property to its real type, SelectList -->
                <select asp-for="HeadOfDepartmentId" class="form-control" asp-items="(SelectList)@ViewBag.ManagerList">
                    <option value="">-- None --</option>
                </select>
                <!-- ---- END FIX ---- -->
                <span asp-validation-for="HeadOfDepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}